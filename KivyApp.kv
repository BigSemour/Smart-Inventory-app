WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:

<MainWindow>
    name: "main"

    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        padding: [0, 50]
		Label:
			text: "Smart Inventory Management App"
			font_size:45
			color: 'red'



		GridLayout:
			cols:2
            padding: [0, 50]
			Label:
				text: "Create List"
				font_size:25
			CheckBox:
				group: "Actions"
				on_active: root.checkbox_click(self, self.active, "Create List")

			Label:
				text: "Edit List"
				font_size:25
			CheckBox:
				group: "Actions"
				on_active: root.checkbox_click(self, self.active, "Edit List")

			Label:
				text: "Stock Prediction"
				font_size:25
			CheckBox:
				group: "Actions"
				on_active: root.checkbox_click(self, self.active, "Stock Prediction")

		Button:
			text: "Submit"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			on_press: root.on_press_button()

<CreationWindow>
    name: "creation"

    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        padding: [0, 40]
		Label:
			text: "Add List"
			font_size:84
			color: 'red'
			padding: [0, 50]

        GridLayout:
			cols:2
            padding: [50, 80]
            Label:
                text: "Enter List Name"
                font_size: 25

            TextInput:
                id: newlist
                multiline: False
                font_size: 22


		Button:
			text: "Add"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			padding: [0, 50]
			on_release: root.on_release_button()

        Button:
            text: "Back"
            font_size: 32
            size_hint: (.5, .3)
            pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'red'
			color: 'white'
			on_release: root.manager.current = 'main'

<ManualWindow>
    name: "manualform"
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: [0, 50]

		Label:
			text: "Manually Add Details"
			font_size:32
			color: 'red'

        GridLayout:
			cols:2
			padding: [50, 55]

            Label:
                text: "Enter Object Name"
                font_size: 25

            TextInput:
                id: newName
                multiline: False
                font_size: 20
        GridLayout:
            cols: 2
            padding: [50, 55]

            Label:
                text: "Enter Object Price"
                font_size: 25

            TextInput:
                id: newPrice
                multiline: False
                font_size: 20

		Button:
			text: "Submit"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			on_release: root.on_release_button1()