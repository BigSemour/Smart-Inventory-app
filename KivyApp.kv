WindowManager:
    MainWindow:
    CreationWindow:
    ManualWindow:
    SelectionWindow:
    ProductWindow:

<MainWindow>
    name: "main"

    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        padding: [0, 50]
		Label:
			text: "Smart Inventory Management App"
			font_size:45
			color: 'red'



		GridLayout:
			cols:2
            padding: [0, 50]
			Label:
				text: "Create List"
				font_size:25
			CheckBox:
				group: "Actions"
				on_active: root.checkbox_click(self, self.active, "Create List")

			Label:
				text: "Edit List"
				font_size:25
			CheckBox:
				group: "Actions"
				on_active: root.checkbox_click(self, self.active, "Edit List")

			Label:
				text: "Stock Prediction"
				font_size:25
			CheckBox:
				group: "Actions"
				on_active: root.checkbox_click(self, self.active, "Stock Prediction")

		Button:
			text: "Submit"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			on_press:
			    root.manager.transition.direction = 'left'
			    root.on_press_button()

<CreationWindow>
    name: "creation"

    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        padding: [0, 40]
		Label:
			text: "Add List"
			font_size:84
			color: 'red'
			padding: [0, 50]

        GridLayout:
			cols:2
            padding: [50, 80]
            Label:
                text: "Enter List Name"
                font_size: 25

            TextInput:
                id: newlist
                multiline: False
                font_size: 22


		Button:
			text: "Add"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			padding: [0, 50]
			on_release: root.on_release_button()

        Button:
            text: "Back"
            font_size: 32
            size_hint: (.5, .3)
            pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'red'
			color: 'white'
			on_release:
			    root.manager.transition.direction = 'right'
			    root.manager.current = 'main'

<ManualWindow>
    name: "manualform"
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: [0, 50]

		Label:
			text: "Manually Add Details"
			font_size:32
			color: 'red'

        GridLayout:
			cols:2
			padding: [50, 55]

            Label:
                text: "Enter Object Name"
                font_size: 25

            TextInput:
                id: newName
                multiline: False
                font_size: 20
        GridLayout:
            cols: 2
            padding: [50, 55]

            Label:
                text: "Enter Object Price"
                font_size: 25

            TextInput:
                id: newPrice
                multiline: False
                font_size: 20

		Button:
			text: "Submit"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			on_release:
			    root.category = root.manager.get_screen("creation").category
			    root.barcode_data = root.manager.get_screen("product").barcode_data
			    root.on_release_button()

<SelectionWindow>:
    name: "selection"
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: [0, 50]

		Label:
		    text: "Selection List to Edit"
			font_size:32
			color: 'red'
        GridLayout:
			cols:2
			padding: [50, 55]

            Button:
                pos_hint:{'center_x': .5, 'center_y': .5}
                id: drop_cat_menu
                text: 'Select List'
                size_hint_y: None
                height: 44
                on_parent: drop_content.dismiss()
                on_release: drop_content.open(self)
            DropDown:
                id: drop_content
                # on_parent: self.dismiss()
                on_select:
                    drop_content.text = f'{args[1]}'
                max_height: 120

        GridLayout:
            cols:2
            padding: [50, 55]

            Button:
                text: "Submit"
                # on_release: root.manager.current = 'main'

            Button:
                text: "Back"
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'main'

<ProductWindow>:
    name: "product"
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: [0, 50]

        Label:
			text: "Add Product"
			font_size:84
			color: 'red'
			padding: [0, 50]

        GridLayout:
			cols:3
            padding: [50, 70]
            Label:
                text: "Enter UPC Number"
                font_size: 25

            TextInput:
                id: newitem
                multiline: False
                font_size: 22

            Button:
                text: "Submit"
                font_size:22
                size_hint: (.5, .3)
                pos_hint: {'center_x': .5, 'center_y': .5}
                background_color: 'green'
                color: 'white'
                padding: [0, 50]
                on_release:
                    root.category = root.manager.get_screen("creation").category
                    root.on_release_button()


		Button:
			text: "Launch Camera"
			font_size:32
			size_hint: (.5, .3)
			pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'green'
			color: 'white'
			padding: [0, 50]
			on_release: root.launch_camera()

        Button:
            text: "Back"
            font_size: 32
            size_hint: (.5, .3)
            pos_hint: {'center_x': .5, 'center_y': .5}
			background_color: 'red'
			color: 'white'
			on_release:
                root.manager.transition.direction = 'right'
			    root.manager.current = 'main'

<EditWindow>
    name: "edit"
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		padding: [0, 50]
		id: table_place